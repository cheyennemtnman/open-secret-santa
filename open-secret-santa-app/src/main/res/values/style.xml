<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"/>

    <!-- Dialog window animations style -->
    <style name="dialog_animate_overshoot">
        <item name="android:windowEnterAnimation">@anim/anim_overshoot_in</item>
        <item name="android:windowExitAnimation">@anim/anim_overshoot_out</item>
    </style>

    <!-- Action Mode (CAB) -->
    <style name="MyTheme.ActionMode.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="MyTheme.ActionMode.Style" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/MyTheme.ActionMode.TitleTextStyle</item>
    </style>

    <!-- General Toolbar theme -->
    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="popupTheme">@style/MyPopUpTheme</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="MyPopUpTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:background">@color/primary_color</item>
    </style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="buttonForeground">?android:selectableItemBackground</item>

        <!-- Not sure if this is necessary for v21+ -->
        <!-- But don't seem to get the CAB line without it -->
        <item name="actionModeBackground">@drawable/cab_background_top</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="actionModeStyle">@style/MyTheme.ActionMode.Style</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>

        <!-- Window background for everywhere -->
        <item name="android:windowBackground">@color/secondary_color</item>

        <!-- CAB support - http://stackoverflow.com/a/26483314/937783 -->
        <item name="windowActionModeOverlay">true</item>
    </style>

</resources>