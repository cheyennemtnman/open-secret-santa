<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light" />

    <!-- Action bar background -->
    <style name="MyTheme.ActionBar.Style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <!-- Action bar text style -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Action Mode (CAB) -->
    <style name="MyTheme.ActionMode.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="MyTheme.ActionMode.Style" parent="android:Widget.Holo.Light.ActionMode">
        <item name="android:titleTextStyle">@style/MyTheme.ActionMode.TitleTextStyle</item>
    </style>

    <!-- Overflow menu -->
    <style name="OverFlowMenu.Style" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <!-- Background for the overflow menu -->
    <style name="MyTheme.PopupMenu.Style" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <!-- Dialog window animations style -->
    <style name="dialog_animate_overshoot">
        <item name="android:windowEnterAnimation">@anim/anim_overshoot_in</item>
        <item name="android:windowExitAnimation">@anim/anim_overshoot_out</item>
    </style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:popupMenuStyle">@style/MyTheme.PopupMenu.Style</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar.Style</item>
        <item name="android:actionMenuTextColor">@color/primary_color</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_cab_done</item>
        <item name="android:actionModeStyle">@style/MyTheme.ActionMode.Style</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowMenu.Style</item>
        <item name="buttonForeground">?android:selectableItemBackground</item>
    </style>

    <!-- Background window color to match Activity background -->
    <style name="AppLauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/secondary_color</item>
    </style>

</resources>