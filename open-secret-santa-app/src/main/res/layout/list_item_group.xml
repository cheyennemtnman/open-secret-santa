<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_group_list_item_checkbox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.90"
        android:background="@drawable/selector_group_list_item"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView_groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/dark_grey" />

        <TextView
            android:id="@+id/textView_groupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/shade_of_grey4"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>