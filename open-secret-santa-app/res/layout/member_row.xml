<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="4dp"
  android:background="@drawable/member_listview_row"
  android:alpha="0.95"
  android:id="@+id/member_relativeLayout">

  <!-- android:background sets visual indicator of list item selection -->

  <ImageView
    android:id="@+id/member_imageview"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:cropToPadding="true"
    android:scaleType="centerCrop"
    android:contentDescription="@string/member_avatar_accesshint"
    android:layout_margin="4dp" />

  <TextView
    android:id="@+id/sent_status_textview"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignBottom="@+id/member_imageview"
    android:layout_alignLeft="@+id/member_imageview"
    android:layout_alignRight="@+id/member_imageview"
    android:minWidth="48dp"
    android:text="State"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:textSize="10sp"
    android:gravity="center"
    android:layout_marginLeft="4dp" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mr User"
    android:id="@+id/member_name_textview"
    android:layout_toLeftOf="@+id/restriction_count_textview"
    android:layout_toRightOf="@+id/member_imageview"
    android:textAppearance="@android:style/TextAppearance.Large"
    android:textColor="@android:color/holo_blue_light"
    android:layout_alignTop="@+id/member_imageview" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="test@example.com"
    android:id="@+id/contact_address_textview"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/member_imageview"
    android:layout_toLeftOf="@+id/restriction_count_textview"
    android:singleLine="true"
    android:textSize="12sp"
    android:textAppearance="@android:style/TextAppearance.Small"
    android:layout_alignBottom="@+id/member_imageview"/>

  <TextView
    android:id="@+id/restriction_count_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:minWidth="48dp"
    android:text="2 restrictions"
    android:textColor="@android:color/white"
    android:textAppearance="?android:attr/textAppearanceListItemSmall"
    android:textSize="10sp"
    android:background="@android:color/holo_purple"
    android:gravity="right"
    android:layout_alignTop="@+id/member_imageview"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"/>

</RelativeLayout>
