<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="50dp"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/layout_white_border"
  android:id="@+id/memberEntryLayout">

  <TableLayout
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:layout_width="wrap_content"
    android:layout_weight="1.0">

    <TableRow android:layout_width="match_parent">

      <TextView
        android:id="@+id/memberName"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/dark_grey"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow android:layout_width="match_parent">

      <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
          android:id="@+id/contactMode"
          android:textColor="@color/dark_grey"
          android:textSize="12sp"
          android:layout_height="match_parent"
          android:layout_width="wrap_content"
          android:paddingLeft="5dp"/>
      </LinearLayout>
    </TableRow>
  </TableLayout>

  <ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/ic_menu_blocked_user"
    android:id="@+id/restrictMembersImage"
    android:layout_height="match_parent"></ImageView>

  <TextView
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:textColor="@color/dark_grey"
    android:gravity="center_vertical|left"
    android:id="@+id/restrictionCountTextView"
    android:layout_height="match_parent"
    android:paddingRight="5dp"></TextView>

  <ImageView
    android:layout_gravity="right"
    android:id="@+id/removeMemberButton"
    android:src="@drawable/ic_menu_delete"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"></ImageView>
</LinearLayout>
