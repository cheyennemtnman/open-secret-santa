<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="50dp"
  android:background="@drawable/layout_white_border">

  <TextView
    android:layout_weight="1.0"
    android:id="@+id/grouprow_nameTextView"
    android:layout_width="match_parent"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_height="match_parent"
    android:gravity="center_vertical|left"
    android:paddingLeft="5dp"
    android:textColor="@color/dark_grey"></TextView>

  <ImageView
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:layout_marginRight="0dp"
    android:paddingLeft="5dp"
    android:id="@+id/imageView1"
    android:src="@drawable/ic_menu_allfriends"
    android:layout_gravity="left"></ImageView>

  <TextView
    android:layout_width="wrap_content"
    android:textSize="12sp"
    android:textColor="@color/dark_grey"
    android:gravity="center_vertical|left"
    android:id="@+id/grouprow_memberCountTextView"
    android:layout_height="match_parent"
    android:paddingRight="5dp"></TextView>

  <ImageView
    android:layout_gravity="right"
    android:id="@+id/removeGroupButton"
    android:src="@drawable/ic_menu_delete"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"></ImageView>
</LinearLayout>
