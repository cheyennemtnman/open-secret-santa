<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="?android:attr/listPreferredItemHeight"
  android:layout_width="match_parent"
  android:padding="4dp"
  android:background="@color/shade_of_grey4"
  android:alpha="0.90">

  <ImageView
    android:id="@+id/member_imageview"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_gravity="center"
    android:cropToPadding="true"
    android:scaleType="centerCrop"
    android:contentDescription="@string/member_avatar_accesshint"
    android:padding="4dp" />

  <TextView
    android:layout_width="0dp"
    android:id="@+id/member_name_textview"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:clickable="false"
    android:paddingLeft="4dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:textColor="@android:color/holo_blue_light"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical|left"
    android:text="Test User" />

  <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/restrict_checkbox"
    android:button="@drawable/restrictions_checkbox"
    android:layout_gravity="center"
    android:padding="4dp" />
</LinearLayout>
  